<section id="sectionCart">
    <header>
        <h1>Cart</h1>

    </header>

    <main>
        <div class="titles">
            <span class="img">ðŸ“·</span>
            <h2 class="title">Product</h2>
            <h2 class="price">Price</h2>
            <h2 class="quantity">Quantity</h2>
            <h2 class="subtotal">Subtotal</h2>
            <h2 class="delete">Delete</h2>

        </div>
        {{#each products}}
        <div class="cartProductItem">
            <img class="img" src="/img/products/{{this.imgs.[0]}}" alt="">

            <a class="title" href="/product/detail/{{this._id}}/{{this.brand}}-{{this.model}}">
                {{this.brand}} {{this.model}}
            </a>

            <span class="price">${{this.price}}</span>
            <div class="counter">
                <a href="/cart/subtractProduct/{{this._id}}">-</a>
                <span>{{this.quantity}}</span>
                <a href="/cart/addProduct/{{this._id}}">+</a>
            </div>
            <span class="subtotal">${{subtotal}}</span>
            <a href="/cart/deleteProduct/{{this._id}}" class="deleteBtn">ðŸ—‘</a>
        </div>
        {{/each}}
    </main>


    <aside>
        <div class="texts">
            <h2>TOTAL: ${{total products}}</h2>

        </div>

        <div class="buttons">
            <a href="/cart/checkOut" class="btn-primary">Confirmar compra</a>
            <a href="/" class="btn-seconday">Seguir comprando</a>
        </div>
    </aside>
</section>